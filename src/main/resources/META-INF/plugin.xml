<idea-plugin>
    <id>com.jetbrans.arend.ide</id>
    <name>Arend</name>
    <version>0.0.1</version>
    <vendor url="https://github.com/JetBrains/intellij-arend"/>

    <description><![CDATA[
      Arend language support
    ]]></description>

    <change-notes><![CDATA[
      Release 0.0.1: Initial release.<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">

        <!-- Module -->

        <moduleType id="AREND_MODULE" implementationClass="com.jetbrains.arend.ide.module.ArdModuleType"/>
        <moduleBuilder builderClass="com.jetbrains.arend.ide.module.util.ArdModuleBuilder"/>
        <projectStructureDetector
                implementation="com.jetbrains.arend.ide.module.util.ArdProjectStructureDetector"/>

        <!-- Startup -->

        <postStartupActivity implementation="com.jetbrains.arend.ide.ArdStartupActivity"/>

        <!-- Arend -->

        <!-- File-type Factory -->

        <fileTypeFactory implementation="com.jetbrains.arend.ide.ArdFileTypeFactory"/>

        <!-- Parser -->

        <lang.parserDefinition language="Arend"
                               implementationClass="com.jetbrains.arend.ide.parser.ArdParserDefinition"/>

        <lang.parserDefinition language="LibLang"
                               implementationClass="com.jetbrains.arend.ide.parser.ArdlParserDefinition"/>

        <!-- Name Validator -->

        <lang.namesValidator language="Arend"
                             implementationClass="com.jetbrains.arend.ide.refactoring.ArdNamesValidator"/>

        <!-- Syntax Highlighter -->

        <lang.syntaxHighlighterFactory language="Arend"
                                       implementationClass="com.jetbrains.arend.ide.highlight.ArdSyntaxHighlighterFactory"/>

        <lang.syntaxHighlighterFactory language="LibLang"
                                       implementationClass="com.jetbrains.arend.ide.ardlhighlight.ArdlSyntaxHighlighterFactory"/>

        <!-- Commenter -->

        <lang.commenter language="Arend" implementationClass="com.jetbrains.arend.ide.commenter.ArdCommenter"/>

        <!-- Matchers -->

        <lang.braceMatcher language="Arend" implementationClass="com.jetbrains.arend.ide.ArdBraceMatcher"/>

        <!-- Documentation -->

        <lang.documentationProvider language="Arend"
                                    implementationClass="com.jetbrains.arend.ide.ArdDocumentationProvider"/>

        <lang.implementationTextSelectioner language="Arend"
                                            implementationClass="com.jetbrains.arend.ide.ArdImplementationTextSelectioner"/>

        <!-- Structure View -->

        <lang.psiStructureViewFactory language="Arend"
                                      implementationClass="com.jetbrains.arend.ide.structure.ArdPsiStructureViewFactory"/>

        <!-- Hierarchy -->

        <callHierarchyProvider language="Arend"
                               implementationClass="com.jetbrains.arend.ide.hierarchy.call.ArdCallHierarchyProvider"/>
        <typeHierarchyProvider language="Arend"
                               implementationClass="com.jetbrains.arend.ide.hierarchy.clazz.ArdClassHierarchyProvider"/>

        <!-- Usages Provider -->

        <referencesSearch implementation="com.jetbrains.arend.ide.search.ArdCustomSearcher"/>

        <lang.findUsagesProvider language="Arend"
                                 implementationClass="com.jetbrains.arend.ide.search.ArdFindUsagesProvider"/>
        <fileStructureGroupRuleProvider
                implementation="com.jetbrains.arend.ide.search.ArdDefClassGroupingRuleProvider"/>
        <fileStructureGroupRuleProvider
                implementation="com.jetbrains.arend.ide.search.ArdDefDataGroupingRuleProvider"/>
        <fileStructureGroupRuleProvider
                implementation="com.jetbrains.arend.ide.search.ArdDefFunctionGroupingRuleProvider"/>
        <fileStructureGroupRuleProvider
                implementation="com.jetbrains.arend.ide.search.ArdClassFieldGroupingRuleProvider"/>
        <fileStructureGroupRuleProvider
                implementation="com.jetbrains.arend.ide.search.ArdClassFieldSynGroupingRuleProvider"/>
        <fileStructureGroupRuleProvider
                implementation="com.jetbrains.arend.ide.search.ArdDefInstanceGroupingRuleProvider"/>
        <fileStructureGroupRuleProvider
                implementation="com.jetbrains.arend.ide.search.ArdConstructorGroupingRuleProvider"/>

        <!-- Navigation -->

        <gotoClassContributor implementation="com.jetbrains.arend.ide.navigation.ArdClassNavigationContributor"/>
        <gotoSymbolContributor
                implementation="com.jetbrains.arend.ide.navigation.ArdSymbolNavigationContributor"/>

        <!-- Hints -->

        <declarationRangeHandler key="com.jetbrains.arend.ide.lang.core.psi.ArdDefClass"
                                 implementationClass="com.jetbrains.arend.ide.codeInsight.ArdDeclarationRangeHandler"/>
        <declarationRangeHandler key="com.jetbrains.arend.ide.lang.core.psi.ArdDefData"
                                 implementationClass="com.jetbrains.arend.ide.codeInsight.ArdDeclarationRangeHandler"/>
        <declarationRangeHandler key="com.jetbrains.arend.ide.lang.core.psi.ArdDefInstance"
                                 implementationClass="com.jetbrains.arend.ide.codeInsight.ArdDeclarationRangeHandler"/>
        <declarationRangeHandler key="com.jetbrains.arend.ide.lang.core.psi.ArdDefFunction"
                                 implementationClass="com.jetbrains.arend.ide.codeInsight.ArdDeclarationRangeHandler"/>

        <!-- Code Insight -->

        <codeInsight.parameterInfo language="Arend"
                                   implementationClass="com.jetbrains.arend.ide.codeInsight.ArdParameterInfoHandler"/>

        <completion.contributor language="Arend"
                                implementationClass="com.jetbrains.arend.ide.codeInsight.completion.ArdCompletionContributor"/>

        <completion.confidence language="Arend"
                               implementationClass="com.jetbrains.arend.ide.codeInsight.completion.ArdCompletionConfidence"
                               id="vcCompletion"/>

        <!-- Annotation -->

        <annotator language="Arend"
                   implementationClass="com.jetbrains.arend.ide.annotation.ArdHighlightingAnnotator"/>

        <!-- <highlightRangeExtension implementation="com.jetbrains.arend.ide.annotation.ArdHighlightRangeExtensionn"/> -->

        <referenceImporter implementation="com.jetbrains.arend.ide.annotation.ArdReferenceImporter"/>

        <!-- Line Marker Providers -->

        <runLineMarkerContributor language="Arend"
                                  implementationClass="com.jetbrains.arend.ide.typechecking.execution.TypeCheckRunLineMarkerContributor"/>

        <!-- Color Settings -->

        <colorSettingsPage implementation="com.jetbrains.arend.ide.editor.ArdColorSettingsPage"/>

        <!-- Folding -->

        <lang.foldingBuilder language="Arend" implementationClass="com.jetbrains.arend.ide.ArdFoldingBuilder"/>

        <!-- Refactoring -->

        <renameInputValidator implementation="com.jetbrains.arend.ide.refactoring.ArdRenameInputValidator"/>
        <lang.refactoringSupport language="Arend"
                                 implementationClass="com.jetbrains.arend.ide.refactoring.ArdRefactoringSupportProvider"/>

        <!-- Run Configurations -->

        <programRunner implementation="com.jetbrains.arend.ide.typechecking.execution.TypeCheckRunner"/>
        <configurationType
                implementation="com.jetbrains.arend.ide.typechecking.execution.configurations.TypeCheckConfigurationType"/>
        <runConfigurationProducer
                implementation="com.jetbrains.arend.ide.typechecking.execution.TypeCheckRunConfigurationProducer"/>

        <!-- Indices -->

        <stubIndex implementation="com.jetbrains.arend.ide.psi.stubs.index.ArdNamedElementIndex"/>
        <stubIndex implementation="com.jetbrains.arend.ide.psi.stubs.index.ArdDefinitionIndex"/>
        <stubIndex implementation="com.jetbrains.arend.ide.psi.stubs.index.ArdGotoClassIndex"/>

        <stubElementTypeHolder class="com.jetbrains.arend.ide.psi.ArdElementTypes"/>

        <!-- Lookup Filters -->

        <lookup.charFilter implementation="com.jetbrains.arend.ide.codeInsight.ArdCharFilter"/>

        <!-- Highlight Filter -->

        <problemFileHighlightFilter implementation="com.jetbrains.arend.ide.highlight.ArdProblemHighlightFilter"/>

        <!-- Services -->

        <projectService serviceInterface="com.jetbrains.arend.ide.typechecking.TypeCheckingService"
                        serviceImplementation="com.jetbrains.arend.ide.typechecking.TypeCheckingServiceImpl"/>

    </extensions>

    <actions>

        <action id="ArdFormatArend.PrettyPrinterFormat"
                class="com.jetbrains.arend.ide.actions.ArdPrettyPrinterFormatAction"
                text="Reformat code with PrettyPrinter"
                description="Format current file with PrettyPrinter">
            <add-to-group group-id="CodeFormatGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift X"/>
        </action>

        <action id="Arend.NewArendFile"
                class="com.jetbrains.arend.ide.actions.ArdCreateFileAction"
                text="Arend File"
                description="Create new Arend file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>

    </actions>

</idea-plugin>
